{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "declaration": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "lib": [
      "es7"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "__test",
    "**/*.spec.*"
  ]
}
